<h1>testing this page works</h1>

<p>There will be a form here that will have the ability to share <a href="<%= params[:url] %>"><%= params[:url] %></a></p>

<%= form_for @post, :html => {:class => 'form-horizontal'} do |f| %>
  <div class="form-group">
      <%= f.label :url, :class => 'col-sm-1 control-label' %>
    <div class="col-sm-5">
      <%= f.text_field :url, :class => 'form-control', :placeholder => 'Enter Link URL here', :value => params[:url] || @post.url || '' %>
    </div>
  </div>
<br>
  <div class="form-group">
    <%= f.label :title, :class => 'col-sm-1 control-label' %>
    <div class="col-sm-5">
      <%= f.text_field :title, :class => 'form-control', :placeholder => 'Add a Title' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :message, :class => 'col-sm-1 control-label' %>
    <div class="col-sm-5">
      <%= f.text_field :message, :class => 'form-control', :placeholder => 'Add a message' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :stream_id, :class => 'col-sm-1 control-label' %>
    <div class="col-sm-5">
      <%= f.select(:stream_id, current_user.streams.collect {|stream| [ stream.name, stream.id ] })%>
    </div>
  </div>
  <div class="form-group">
    <%= f.submit :class => 'btn btn-success' %>
  </div>
<%end%>